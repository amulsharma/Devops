pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                kubectl run nginx --image=nginx
                sleep 5
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                kubectl get pods 
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
